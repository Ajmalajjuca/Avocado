<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>

  <body>
    <%- include('partials/side.ejs') %>

    <div class="screen-overlay"></div>

    <main class="main-wrap">
      <%- include('partials/heder.ejs') %>
  <section class="content-main">
    <div class="content-header">
      <h2 class="content-title">Edit User</h2>
      <div>
        <a href="/admin/users" class="btn btn-primary"><i class="material-icons md-arrow_back"></i> Back to list</a>
      </div>
    </div>
    <div class="card mb-4">
      <div class="card-body">
        <form method="POST" action="/admin/users/<%= user._id %>/edit">
          <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" id="username" name="username" value="<%= user.name %>" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="email" value="<%= user.email %>" class="form-control" required>
          </div>
          <button type="submit" class="btn btn-primary">Update User</button>
        </form>
      </div>
    </div>
  </section>
  <%- include('partials/foot.ejs') %>
</body>
</html>
