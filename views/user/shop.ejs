                          <a href="/product/<%= product._id %>" class="latest-product__item">
                            <div class="latest-product__item__pic">
                              <img src="<%= product.images[0] %>" alt="<%= product.name %>" />
                            </div>
                            <div class="latest-product__item__text">
                              <h6><%= product.name %></h6>
                              <span>₹<%= product.price.toFixed(2) %></span>
                            </div>
                          </a>
