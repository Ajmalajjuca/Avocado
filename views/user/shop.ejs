              </div>
              <div class="row">
                <div class="product__discount__slider owl-carousel">
                  <% LatestProducts.slice(0, 6).forEach(product => { %>
                    <div class="col-lg-4">
                      <div class="product__discount__item">
                        <div
                          class="product__discount__item__pic set-bg"
                          data-setbg="<%= product.images[0] %>"
