<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Address</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <%- include('partials/head.ejs') %>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .edit-address-container {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 30px;
            margin-bottom: 30px;
        }
        .form-group label {
            font-weight: bold;
            color: #333;
        }
        .form-control {
            border-radius: 10px;
            border: 1px solid #ced4da;
            transition: all 0.3s ease;
        }
        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            border-color: #80bdff;
        }
        .btn {
            border-radius: 10px;
            padding: 10px 20px;
            font-weight: bold;
            transition: all 0.3s ease;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: translateY(-2px);
        }
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .btn-danger:hover {
            background-color: #bd2130;
            border-color: #bd2130;
            transform: translateY(-2px);
        }
        
        .input-icon {
    position: absolute;
    right: 10px;
    top: 42px;
    color: #6c757d;
    transition: all 0.3s ease;
}
    </style>
</head>

<body>
    <%- include('partials/header.ejs') %>    

    <!-- Breadcrumb Section -->
    <section class="breadcrumb-option animate__animated animate__fadeIn">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Edit Address</h4>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Edit Address Form Section -->
    <div class="container animate__animated animate__fadeInUp">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="edit-address-container">
                    <h3 class="text-center mb-4">Update Address</h3>
                    <% if (messages.error && messages.error.length > 0) { %>
                        <div class="alert alert-danger animate__animated animate__shakeX" role="alert"><%= messages.error[0] %></div>
                    <% } %>
                    <% if (messages.info && messages.info.length > 0) { %>
                        <div class="alert alert-info animate__animated animate__shakeX" role="alert"><%= messages.info[0] %></div>
                    <% } %>
                    <% if (messages.success && messages.success.length > 0) { %>
                        <div class="alert alert-success animate__animated animate__shakeX" role="alert"><%= messages.success[0] %></div>
                    <% } %>
                    <form id="editAddressForm" action="/editAddress/<%= address._id %>" method="POST">
                        <div class="form-group position-relative">
                            <label for="name">Name</label>
                            <input type="text" id="name" name="name" class="form-control" value="<%= address.name %>" required>
                            <i class="fas fa-user input-icon"></i>
                        </div>
                        <div class="form-group position-relative">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control" value="<%= address.email %>" required>
                            <i class="fas fa-envelope input-icon"></i>
                        </div>
                        <div class="form-group position-relative">
                            <label for="mobile">Mobile</label>
                            <input type="text" id="mobile" name="mobile" class="form-control" value="<%= address.mobile %>" required>
                            <i class="fas fa-mobile-alt input-icon"></i>
                        </div>
                        <div class="form-group position-relative">
                            <label for="housename">House Name</label>
                            <input type="text" id="housename" name="housename" class="form-control" value="<%= address.housename %>" required>
                            <i class="fas fa-home input-icon"></i>
                        </div>
                        <div class="form-group position-relative">
                            <label for="street">Street</label>
                            <input type="text" id="street" name="street" class="form-control" value="<%= address.street %>" required>
                            <i class="fas fa-road input-icon"></i>
                        </div>
                        <div class="form-group position-relative">
                            <label for="city">City</label>
                            <input type="text" id="city" name="city" class="form-control" value="<%= address.city %>" required>
                            <i class="fas fa-city input-icon"></i>
                        </div>
                        <div class="form-group position-relative">
                            <label for="state">State</label>
                            <input type="text" id="state" name="state" class="form-control" value="<%= address.state %>" required>
                            <i class="fas fa-map-marker-alt input-icon"></i>
                        </div>
                        <div class="form-group position-relative">
                            <label for="country">Country</label>
                            <input type="text" id="country" name="country" class="form-control" value="<%= address.country %>" required>
                            <i class="fas fa-globe input-icon"></i>
                        </div>
                        <div class="form-group position-relative">
                            <label for="pincode">Pincode</label>
                            <input type="text" id="pincode" name="pincode" class="form-control" value="<%= address.pincode %>" required>
                            <i class="fas fa-map-pin input-icon"></i>
                        </div>
                        <div class="form-group position-relative">
                            <label for="save_as">Save As</label>
                            <input type="text" id="save_as" name="save_as" class="form-control" value="<%= address.save_as %>" required>
                            <i class="fas fa-tag input-icon"></i>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary mr-2">Update Address</button>
                            <button type="button" class="btn btn-danger" onclick="deleteAddress('<%= address._id %>')">Delete Address</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>    

    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.7.1/gsap.min.js"></script>
    <%- include('partials/foot.ejs') %>

    <script>
        // Form validation and submission
        document.getElementById('editAddressForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent form submission

            const form = event.target;
            const name = form.name.value.trim();
            const email = form.email.value.trim();
            const mobile = form.mobile.value.trim();
            const housename = form.housename.value.trim();
            const street = form.street.value.trim();
            const city = form.city.value.trim();
            const state = form.state.value.trim();
            const country = form.country.value.trim();
            const pincode = form.pincode.value.trim();
            const save_as = form.save_as.value.trim();

            // Validate fields
            if (!name || !email || !mobile || !housename || !street || !city || !state || !country || !pincode || !save_as) {
                Swal.fire('Error', 'All fields are required.', 'error');
                return;
            }

            if (!/^[A-Za-z\s]+$/.test(name)) {
                Swal.fire('Error', 'Invalid name format.', 'error');
                return;
            }

            if (!/^\S+@\S+\.\S+$/.test(email)) {
                Swal.fire('Error', 'Invalid email format.', 'error');
                return;
            }

            if (!/^\d{10}$/.test(mobile)) {
                Swal.fire('Error', 'Invalid mobile number format.', 'error');
                return;
            }

            if (!/^\d{6}$/.test(pincode)) {
                Swal.fire('Error', 'Invalid pincode format.', 'error');
                return;
            }

            // If all validations pass, show confirmation and submit the form
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to update the address?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, update it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });

        // Delete address function
        function deleteAddress(addressId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to delete this address?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/deleteAddress/${addressId}`;
                }
            });
        }

        // GSAP animations
        gsap.from(".edit-address-container", {duration: 1, y: 50, opacity: 0, ease: "power3.out"});
        gsap.from(".form-group", {duration: 0.8, y: 20, opacity: 0, stagger: 0.1, ease: "power3.out", delay: 0.5});
        gsap.from(".btn", {duration: 0.5, scale: 0.5, opacity: 0, ease: "back.out(1.7)", delay: 1.5});

        // Input focus animations
        const inputs = document.querySelectorAll('.form-control');
        inputs.forEach(input => {
            input.addEventListener('focus', () => {
                gsap.to(input, {duration: 0.3, scale: 1.05, ease: "power2.out"});
            });
            input.addEventListener('blur', () => {
                gsap.to(input, {duration: 0.3, scale: 1, ease: "power2.out"});
            });
        });
    </script>
</body>

</html>